{
  "schemaVersion": 1,
  "id": "lucky",
  "version": "${fabricModVersion}",

  "name": "Lucky Block",
  "description": "Adds a block with random outcomes",
  "authors": [
    "Alex Socha"
  ],
  "contact": {
    "homepage": "https://luckyblockmod.com/",
    "sources": "https://github.com/alexsocha/luckyblock"
  },

  "license": "All rights reserved",
  "icon": "assets/lucky/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [{
      "adapter": "kotlin",
      "value":   "mod.lucky.fabric.FabricMod"
     }],
    "client": [{
      "adapter": "kotlin",
      "value":   "mod.lucky.fabric.FabricModClient"
    }]
  },

  "depends": {
    "fabricloader": ">=${fabricMinLoaderVersion}",
    "fabric": "*",
    "minecraft": "${fabricMCTargetVersion}",
    "fabric-language-kotlin": "*"
  }
}
